# Dockerfile
FROM apache/superset:latest

USER root

# Install build tools and Postgres client libraries
RUN apt-get update && \
    apt-get install -y build-essential gcc g++ libpq-dev && \
    rm -rf /var/lib/apt/lists/*

# Switch back to superset user
USER superset

# Install Superset with Postgres extras
RUN pip install --no-cache-dir 'apache-superset[postgres]'
